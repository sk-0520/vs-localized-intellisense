<Window
  x:Class="VsLocalizedIntellisense.Views.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  
  xmlns:p="clr-namespace:VsLocalizedIntellisense.Properties"
  
  Title="{x:Static p:Resources.ApplicationName}"
  Height="450"
  Width="800"
  WindowStartupLocation="CenterScreen"
  ResizeMode="CanResizeWithGrip"

  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:datacontext="clr-namespace:VsLocalizedIntellisense.ViewModels" d:DataContext="{d:DesignInstance Type=datacontext:MainViewModel}"
  mc:Ignorable="d"
>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    
    <StackPanel Grid.Row="1" Grid.IsSharedSizeScope="True" Background="Red">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" SharedSizeGroup="Header" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0">install</Label>
        <Grid Grid.Column="1">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
          </Grid.ColumnDefinitions>
          <TextBox Grid.Column="0" Text="{Binding InstallRootDirectoryPath, UpdateSourceTrigger=PropertyChanged}" />
          <Button Grid.Column="1" Command="{Binding SelectInstallRootDirectoryPathCommand}">select</Button>
        </Grid>
      </Grid>

      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" SharedSizeGroup="Header" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0">dirs</Label>
        <ListView Grid.Column="1" ItemsSource="{Binding DirectoryItems}">
          <ListView.View>
            <GridView>
              <GridViewColumn Header="DirectoryName">
                <GridViewColumn.CellTemplate>
                  <DataTemplate>
                    <TextBlock Text="{Binding DirectoryName, Mode=OneWay}"/>
                  </DataTemplate>
                </GridViewColumn.CellTemplate>
              </GridViewColumn>
              <GridViewColumn Header="LibraryVersionItems">
                <GridViewColumn.CellTemplate>
                  <DataTemplate>
                    <ComboBox ItemsSource="{Binding LibraryVersionItems}" SelectedItem="{Binding LibraryVersion}">
                      <ComboBox.ItemTemplate>
                        <DataTemplate>
                          <TextBlock Text="{Binding Version}" />
                        </DataTemplate>
                      </ComboBox.ItemTemplate>
                    </ComboBox>
                  </DataTemplate>
                </GridViewColumn.CellTemplate>
              </GridViewColumn>

              <GridViewColumn Header="IntellisenseVersionItems">
                <GridViewColumn.CellTemplate>
                  <DataTemplate>
                    <ComboBox ItemsSource="{Binding IntellisenseVersionItems}" SelectedItem="{Binding IntellisenseVersion}">
                      <ComboBox.ItemTemplate>
                        <DataTemplate>
                          <TextBlock Text="{Binding Version}" />
                        </DataTemplate>
                      </ComboBox.ItemTemplate>
                    </ComboBox>
                  </DataTemplate>
                </GridViewColumn.CellTemplate>
              </GridViewColumn>

              <GridViewColumn Header="LanguageItems">
                <GridViewColumn.CellTemplate>
                  <DataTemplate>
                    <ComboBox ItemsSource="{Binding LanguageItems}" SelectedItem="{Binding Language}">
                      <ComboBox.ItemTemplate>
                        <DataTemplate>
                          <TextBlock Text="{Binding Language}" />
                        </DataTemplate>
                      </ComboBox.ItemTemplate>
                    </ComboBox>
                  </DataTemplate>
                </GridViewColumn.CellTemplate>
              </GridViewColumn>
            </GridView>
          </ListView.View>
        </ListView>
      </Grid>

      <Grid>
        <Button Command="{Binding DownloadCommand}">download</Button>
      </Grid>
    </StackPanel>

    <Grid Grid.Row="2" Grid.IsSharedSizeScope="True" Background="Lime">
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      
      <TextBox Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" AcceptsReturn="True" />
      <Grid Grid.Row="1">
        <Button Command="{Binding ExecuteCommand}">execute</Button>
      </Grid>
    </Grid>

    <Grid Grid.Row="3">
      <DataGrid x:Name="listLogs" AutoGenerateColumns="False" ItemsSource="{Binding StockLogItems}">
        <DataGrid.Columns>
          <DataGridTextColumn  Header="Timestamp" Binding="{Binding LocalTimestamp, StringFormat=yyyy-MM-dd HH:mm:ss.fff}"/>
          <DataGridTextColumn  Header="Level" Binding="{Binding Level}"/>
          <DataGridTextColumn  Header="Message" Binding="{Binding Message}"/>
        </DataGrid.Columns>
      </DataGrid>
    </Grid>

    <StatusBar Grid.Row="4">
      <TextBlock Text="{Binding AppVersion, Mode=OneTime}" />
    </StatusBar>
  </Grid>
</Window>
