<Window
  x:Class="VsLocalizedIntellisense.Diff.Views.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

  xmlns:app_viewmodels="clr-namespace:VsLocalizedIntellisense.Diff.ViewModels"
  xmlns:app_views="clr-namespace:VsLocalizedIntellisense.Diff.Views"

  Title="MainWindow"
  Width="800"
  Height="450"
  WindowStartupLocation="CenterScreen"
  
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:datacontext="clr-namespace:VsLocalizedIntellisense.Diff.ViewModels" d:DataContext="{d:DesignInstance Type=datacontext:MainViewModel}"
  mc:Ignorable="d"
  >
  <Grid>
    <ContentControl IsTabStop="False" Content="{Binding WorkViewModel}">
      <ContentControl.Resources>
        <DataTemplate DataType="{x:Type app_viewmodels:LanguageSelectViewModel}">
          <app_views:LanguageSelectControl  />
        </DataTemplate>
      </ContentControl.Resources>
    </ContentControl>
  </Grid>
</Window>
