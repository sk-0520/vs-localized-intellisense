{
	"files.exclude": {
		"**/bin": true,
		"**/obj": true,
		".vs": true,
		"*.lnk": true
	},
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/*/**": true,
		".vs": true,
		"**/dist/**": true,
		"**/bin/**": true,
		"**/obj/**": true,
		"*.lnk": true,
	},
	"cSpell.words": [
		"netstandard",
		"vsli",
		"xmldoc"
	],
	"[javascript]": {
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"quickfix.biome": "explicit",
			"source.organizeImports.biome": "explicit"
		},
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescript]": {
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"quickfix.biome": "explicit",
			"source.organizeImports.biome": "explicit"
		},
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescriptreact]": {
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"quickfix.biome": "explicit",
			"source.organizeImports.biome": "explicit"
		},
		"editor.defaultFormatter": "biomejs.biome"
	}
}
